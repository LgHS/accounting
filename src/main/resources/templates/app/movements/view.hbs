{{#partial "title"}}
    Movement from {{movement.entryDate}} of {{movement.amount}}€
{{/partial}}

{{#partial "content"}}

    <h3>Movement from {{movement.entryDate}} of {{movement.amount}}€</h3>
    <form method="post" class="form-grid">
        <input type="hidden" name="{{#csrf_param}}{{/csrf_param}}"
               value="{{#csrf_token}}{{/csrf_token}}">

        <label>From</label>
        <input type="text" readonly value="{{movement.counterPartyName}}">

        <label><a href="/app/movements/by-iban/{{movement.counterPartyAccountNumber}}">From account</a></label>
        <input type="text" readonly value="{{movement.counterPartyAccountNumber}}">

        <label for="account"><a href="/app/accounts/{{movement.accountId}}/movements">To account</a></label>
        <input type="text"
               name="account"
               id="account"
               value="{{movement.accountId}}">

        <label for="communication">Communication</label>
        <input type="text"
               name="communication"
               id="communication"
               value="{{movement.communication}}">

        <label for="amount">Amount</label>
        <input type="number"
               name="amount"
               id="amount"
               value="{{movement.amount}}">

        <label for="category_id">Category</label>
        <select name="category" id="category_id">
            <option value=""></option>
            {{#each categories}}
                <option value="{{this.id}}"
                        {{#eq this.id movement.categoryId}}selected{{/eq}}>
                    {{this.name}}
                </option>
            {{/each}}
        </select>

        <label for="coda_id">Coda</label>
        <input id="coda_id"
               type="text"
               readonly
               value="{{movement.codaId}} / {{movement.codaSequenceNumber}}">
    </form>
{{/partial}}

{{> layout}}
