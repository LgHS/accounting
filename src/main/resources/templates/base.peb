<!doctype html>
<html lang="en">
    <head>
        <link href="{{ href('/public/main.css') }}" rel="stylesheet">
        <title>{% block "title" %}{% endblock %} | LgHS Compta</title>
    </head>
    <body>
        <header>
            <h1><a href="{{ authenticated() ? href('/app') : href('/') }}">LgHS Accounting</a></h1>
            <!--<span> > </span>
            <h2><a href="">{% block "title" %}{% endblock %}</a></h2>-->
            <div class="separator"></div>
            <nav>
                {% if has_admin_role() == true or has_treasurer_role() == true %}
                    <a href="{{ href('/app/movements') }}">Movements</a>
                    <a href="{{ href('/app/subscriptions') }}">Subscriptions</a>
                    <a href="{{ href('/app/accounts') }}">Accounts</a>
                    <a href="{{ href('/app/codas') }}">Codas</a>
                {% endif %}
                <a href="{{ href('/app/users/me') }}">My Data</a>
            </nav>
        </header>
        <main>
            {% block "content" %}{% endblock %}
        </main>
        <footer>
            Connected as {{ username() }}
        </footer>
    </body>
</html>
